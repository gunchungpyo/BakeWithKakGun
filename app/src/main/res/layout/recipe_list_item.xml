<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_inner_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_inner_margin"
    android:background="@color/cardview_light_background"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recipe_poster_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="recipe image"
            android:scaleType="fitXY"
            tools:src="@drawable/nutella" />

        <TextView
            android:id="@+id/tv_recipe_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_text_padding"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/card_text_size"
            tools:text="Nutella Pie" />

    </LinearLayout>

</android.support.v7.widget.CardView>

